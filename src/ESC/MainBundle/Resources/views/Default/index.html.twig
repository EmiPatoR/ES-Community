{% extends "ESCMainBundle::layout.html.twig" %}

{% block body_escnews %}
    <div class="panel-group">
    {% for news in listNews %}
        <div class="panel
            {% if news.gameID == 1 %}
                panel-default
            {% else %}
                panel-default
            {% endif %}
        " data-id="{{ news.id }}" id="close{{ news.id }}">
            <div class="panel-heading">
                {{ news.title }}
                <span class="pull-right">
                    <a id="minus{{ news.id }}" data-toggle="collapse"
                       href="#collapse{{ news.id }}" onclick="minusClick({{ news.id }})">
                        &minus;
                    </a>
                    <a href="#" onclick="closeNews({{ news.id }})">
                        &times;
                    </a>
                </span>
            </div>
            <div id="collapse{{ news.id }}" class="panel-collapse collapse in">
                <div class="panel-body">
                    <p>{{ news.content }}</p>
                    <span class="pull-right">
                        Ecrit par <a href="#">{{ news.author }}</a> le {{ news.date|date('d/m/Y') }}
                    </span>
                </div>
            </div>
        </div>
    {% else %}
        <p>Pas (encore !) de News.</p>
    {% endfor %}
    </div>
{% endblock %}
